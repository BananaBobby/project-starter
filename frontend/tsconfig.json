{
  "compilerOptions": {
    "outDir": "./public/assets/js/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es5",
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./src/"
  },
  "files": [
    "./src/types/definitions.d.ts"
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}
